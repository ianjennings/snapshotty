{
  "name": "SnapShotty",
  "version": "1.0",
  "description": "Take a screenshot and grab the code to post it to github!",
  "background": { "scripts": ["background.js"] },
  "browser_action": {
     "default_icon": "camera.png",
     "default_title": "Take a screen shot!"
  },
  "permissions": ["tabs", "<all_urls>"],
  "manifest_version": 2
}
